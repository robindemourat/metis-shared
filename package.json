{
  "name": "plurishing-shared",
  "version": "0.0.1",
  "description": "Collection of plurishing elements being used accross apps",
  "main": "dist/index.js",
  "scripts": {
    "build": "gulp",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "storybook": "start-storybook -s ./assets_examples -p 9001",
    "build-storybook": "build-storybook",
    "add:dist": "git add dist"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "test",
    "add:dist"
  ],
  "author": "Robin de Mourat <robin.demourat@gmail.com> (https://github.com/robindemourat)",
  "engines": {
    "node": ">= 6.6"
  },
  "peerDependencies": {
    "react": "^16.1.1",
    "react-dom": "^16.1.1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "citation-js": "^0.3.4",
    "d3-dsv": "^1.0.8",
    "mime-types": "^2.1.17",
    "opentype.js": "^0.7.3",
    "oy-vey": "^0.11.0",
    "react-dimensions": "^1.3.1",
    "react-image-tiler": "git+https://github.com/robindemourat/react-image-tiler.git",
    "react-images": "^0.5.14",
    "react-media-player": "^0.7.0",
    "react-modal": "^3.1.10",
    "react-table": "^6.7.6",
    "react-tweet": "git+https://github.com/robindemourat/react-tweet.git",
    "react-zoomable-image": "^1.0.5",
    "redraft": "^0.9.0",
    "srt": "0.0.3",
    "three": "^0.89.0"
  },
  "devDependencies": {
    "@robindemourat/eslint-config": "git+https://github.com/robindemourat/eslint-config.git",
    "@storybook/addon-actions": "^3.2.18",
    "@storybook/addon-links": "^3.2.18",
    "@storybook/react": "^3.2.18",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-template": "^6.26.0",
    "chai": "^4.1.0",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "del": "^3.0.0",
    "enzyme": "^3.1.0",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.5.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^7.0.0",
    "gulp-uglify": "^3.0.0",
    "image-webpack-loader": "^3.3.0",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.2",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.3.2",
    "react-citeproc": "^0.1.7",
    "react-dom": "^16.2.0",
    "sass-loader": "^6.0.3",
    "script-loader": "^0.7.2",
    "storybook": "^1.0.0",
    "style-loader": "^0.19.0",
    "uglify-es": "^3.0.28",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.1"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@robindemourat/eslint-config/es7",
      "@robindemourat/eslint-config/react"
    ],
    "rules": {
      "require-jsdoc": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0
    }
  }
}
