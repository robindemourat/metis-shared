{
  "name": "plurishing-shared",
  "version": "0.0.1",
  "description": "Collection of plurishing elements being used accross apps",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist; mkdir dist; babel src -d dist",
    "lint": "eslint --fix src",
    "comb": "csscomb src",
    "test": "mocha --compilers js:babel-core/register -R spec --recursive $(find src -name '*.spec.js')",
    "storybook": "start-storybook -s ./assets_examples -p 9001",
    "build-storybook": "build-storybook"
  },
  "pre-commit": [
    "lint",
    "build",
    "comb",
    "test"
  ],
  "author": "Robin de Mourat <robin.demourat@gmail.com> (https://github.com/robindemourat)",
  "engines": {
    "node": ">= 6.6"
  },
  "peerDependencies": {
    "react": "^16.1.1",
    "react-dom": "^16.1.1"
  },
  "dependencies": {
    "oy-vey": "^0.11.0",
    "react-tweet": "git+https://github.com/robindemourat/react-tweet.git"
  },
  "devDependencies": {
    "@robindemourat/eslint-config": "git+https://github.com/robindemourat/eslint-config.git",
    "@storybook/addon-actions": "^3.2.18",
    "@storybook/addon-links": "^3.2.18",
    "@storybook/react": "^3.2.18",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-template": "^6.26.0",
    "chai": "^4.1.0",
    "css-loader": "^0.28.0",
    "csscomb": "^4.0.1",
    "enzyme": "^3.1.0",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.5.1",
    "image-webpack-loader": "^3.3.0",
    "mocha": "^4.0.1",
    "node-sass": "^4.5.2",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^16.2.0",
    "sass-loader": "^6.0.3",
    "storybook": "^1.0.0",
    "style-loader": "^0.19.0",
    "uglify-es": "^3.0.28",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.1"
  },
  "babel": {
    "plugins": [
      "transform-decorators-legacy",
      "transform-decorators",
      "transform-object-rest-spread",
      "transform-class-properties"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@robindemourat/eslint-config/es7",
      "@robindemourat/eslint-config/react"
    ],
    "rules": {
      "require-jsdoc": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-no-bind": 0
    }
  }
}
